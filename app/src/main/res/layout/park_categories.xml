<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Parks"
            android:textColor="#5F5D5D"
            android:textSize="25sp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="13dp"
                    android:src="@drawable/nawari_park"
                    android:scaleType="centerCrop"
                    android:background="@drawable/custom3"/>
            <GridLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:columnCount="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparen"
                    android:onClick="NawariPark"
                    android:text="Nawari Park"
                    android:textColor="#5F5D5D"
                    android:textSize="14sp" />
                <GridLayout
                    android:columnCount="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                </GridLayout>
            </GridLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="13dp"
                android:src="@drawable/amarilis_park"
                android:scaleType="centerCrop"
                android:background="@drawable/custom3"/>
            <GridLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:columnCount="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparen"
                    android:onClick="AmarilisPark"
                    android:text="Amarilis Park"
                    android:textColor="#5F5D5D"
                    android:textSize="14sp" />
                <GridLayout
                    android:columnCount="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star2"
                        android:contentDescription="@string/app_name"/>
                </GridLayout>
            </GridLayout>
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="13dp"
                android:src="@drawable/asri_park"
                android:scaleType="centerCrop"
                android:background="@drawable/custom3"/>
            <GridLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:columnCount="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparen"
                    android:onClick="AsriPark"
                    android:text="Asri Park"
                    android:textColor="#5F5D5D"
                    android:textSize="14sp" />
                <GridLayout
                    android:columnCount="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star2"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star2"
                        android:contentDescription="@string/app_name"/>
                </GridLayout>
            </GridLayout>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>